
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/list_end_color"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Manual Attendence"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/edtStdIdMa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Student Id" 
                android:inputType="text">

                <requestFocus />
            </EditText>

            <Spinner
                android:id="@+id/spinnerAttendence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/attendence_option"
                android:prompt="@string/chose_attendence" />

            <Button
                android:id="@+id/btnSetAttendence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Attendence" />

        </LinearLayout>

    </LinearLayout>
